@model List<Subject>
<form asp-action="Index" method="get">
    <input type="text" name="searchInput" class="form-control" placeholder="Search"
        value="@Context.Request.Query["searchInput"]" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>
@if (Model != null && Model.Count > 0)
{
    <div class="container">
        <div class="row g-2 mt-1">
            <div class="col-1">Id</div>
            <div class="col-3">Name</div>
        </div>
        <hr>
        @foreach (var subject in Model)
        {
            <div class="row g-2 mt-1">
                <div class="col-1">@subject.Id</div>
                <div class="col-3">@subject.Name</div>
                <div class="col-1 offset-5">
                    <button class="btn w-100 btn-primary">Update</button>
                </div>
                <div class="col-1">
                    <button class="btn w-100 btn-primary">Tests</button>
                </div>
                <div class="col-1">
                    <button class="btn w-100 btn-danger">Delete</button>
                </div>
            </div>
        }
    </div>
}
else
{
    <div>
        Nothing found
    </div>
}