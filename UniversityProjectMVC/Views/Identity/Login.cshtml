
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            text-align: center;
            width: 400px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            font-size: 18px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        button {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            border: none;
            border-radius: 6px;
            background-color: #2563eb;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #1e40af;
        }

        .toggle-password {
            margin-top: -10px;
            margin-bottom: 20px;
            cursor: pointer;
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>üîê Login</h2>
        <form method="post" asp-action="Login">
            <input type="text" name="username" placeholder="Username" required />
            <input type="password" id="password" name="password" placeholder="Password" required />
            <div class="toggle-password" onclick="togglePassword()">üëÅ Show/Hide Password</div>
            <button type="submit">Login</button>
        </form>
    </div>

    <script>
        function togglePassword() {
            var pass = document.getElementById('password');
            pass.type = pass.type === 'password' ? 'text' : 'password';
        }
    </script>
</body>
</html>
