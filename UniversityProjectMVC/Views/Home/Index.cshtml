@{
    ViewData["Title"] = "Home Page";
}

<div style="text-align: center; margin-top: 50px;">
    <h1>Welcome to the University Portal 🎓</h1>

    @if (!User.Identity.IsAuthenticated)
    {
        <a href="/Identity/Login"
           style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #2563eb; color: white; text-decoration: none; border-radius: 5px;">
            🔐 Login
        </a>
    }
    else
    {
        <p style="margin-top: 20px;">👋 Hello, @User.Identity.Name</p>

        <form method="post" action="/Home/Logout" style="margin-top: 10px;">
            <button type="submit" style="padding: 8px 16px; background-color: #ef4444; color: white; border: none; border-radius: 5px;">
                🚪 Logout
            </button>
        </form>
    }
</div>
