@model List<Question>
@if (Model != null && Model.Count > 0)
{
    <div class="container">
        <div class="row g-2 mt-1">
            <div class="col-1">Id</div>
            <div class="col-3">Title</div>
            <div class="col-3">Answers Count</div>
        </div>
        <hr>
        @foreach (var question in Model)
        {
            <div class="row g-2 mt-1">
                <div class="col-1">@question.Id</div>
                <div class="col-3">@question.Title</div>
                <div class="col-1">@question.Answers.Count</div>
                <div class="col-1 offset-4">
                    <button class="btn w-100 btn-primary">Update</button>
                </div>
                <div class="col-1">
                    <button class="btn w-100 btn-primary">Questions</button>
                </div>
                <div class="col-1">
                    <button class="btn w-100 btn-danger">Delete</button>
                </div>
            </div>
        }
    </div>
}
else
{
    <div>
        Nothing found
    </div>
}