<Page x:Class="UniversityProjectWPF.Pages.CreateSubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniversityProjectWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateSubjectPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="Name" Margin="0,0,0,5" Width="400" HorizontalAlignment="Left"/>

            <Button x:Name="Submit" Content="Submit" Click="Submit_Click" Height="30" Width="50" HorizontalAlignment="Left"/>

            <TextBlock x:Name="ErrorMessage" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
